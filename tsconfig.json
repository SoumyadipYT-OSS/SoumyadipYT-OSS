{
  "compilerOptions": {
    "target": "ES2020",                 // Emit compatible JavaScript
    "module": "commonjs",               // Use CommonJS modules for Node.js
    "strict": true,                     // Enable all strict type-checking options
    "esModuleInterop": true,            // Allow default imports from CommonJS modules
    "skipLibCheck": true,               // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true  // Ensure file name casing consistency
  },
  "include": ["scripts/**/*.ts"]         // Only compile your scripts folder
}
